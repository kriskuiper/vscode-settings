{
  // Zen mode
  "zenMode.fullScreen": false,
  "zenMode.centerLayout": false,

  // Theming
  "workbench.iconTheme": "Monokai Pro (Filter Ristretto) Icons",
  "editor.fontLigatures": false,
  "workbench.preferredLightColorTheme": "Monokai Pro Light (Filter Sun)",
  "workbench.preferredDarkColorTheme": "Monokai Pro (Filter Ristretto)",
  "editor.fontFamily": "\"SauceCodePro Nerd Font\", Menlo, Monaco, 'Courier New', monospace",
  "editor.codeLensFontSize": 13,
  "editor.fontSize": 15,
  "editor.lineHeight": 1.75,
  "editor.suggestLineHeight": 28,
  "terminal.integrated.fontSize": 14,
  "terminal.integrated.lineHeight": 1,
  "debug.console.fontSize": 10,

  // More minimal UI
  "editor.minimap.enabled": false,
  "editor.glyphMargin": false,
  "editor.folding": true,
  "workbench.editor.showTabs": "multiple",
  "workbench.editor.pinnedTabSizing": "compact",
  "workbench.editor.tabSizing": "shrink",

  // Theme-specific UI
  "diffEditor.renderSideBySide": false,
  "editor.copyWithSyntaxHighlighting": false,
  "editor.snippetSuggestions": "bottom",
  "editor.tabSize": 2,
  "editor.detectIndentation": true,
  "editor.multiCursorModifier": "alt",
  "files.insertFinalNewline": true,
  "window.nativeFullScreen": true,
  "window.newWindowDimensions": "inherit",
  "workbench.editor.enablePreview": false,
  "workbench.editor.highlightModifiedTabs": true,

  // Search
  "search.smartCase": true,
  "search.useIgnoreFiles": false,
  "search.exclude": {
    "**/vendor/*": true,
    "**/node_modules": true,
    "**/dist": true,
    "**/package-lock.json": false,
    "**/yarn.lock": false
  },

  // Code
  "editor.cursorBlinking": "expand",
  "editor.wordWrap": "on",
  "editor.tabCompletion": "on",
  "explorer.openEditors.visible": 1,

  // Files to display
  "files.enableTrash": false,
  "files.exclude": {
    ".cache-loader/": true,
    ".gitattributes": true,
    ".gitkeep": true,
    ".travis.yml": true,
    ".vercel": true,
    ".vscode/": true,
    "coverage": true,
    "acf-json": true,
    "backend/vendor": true,
    "CODE_OF_CONDUCT.md": true,
    "config": false,
    "LICENSE.md": true,
    "package-lock.json": false,
    "phpcs.xml": true,

    // For more minimal option
    ".editorconfig": true,
    "prettier.config.js": true,
    // "**/README.md": true,
    "yarn.lock": false,
    "node_modules/": false,
    ".gitignore": true,
    ".output/node_modules/": false,

    // And even more ultra minimal
    ".nuxt": true,
    ".next": true,
    ".output": true,
    "package.json": false,
    "tsconfig.json": false
  },
  "editor.semanticHighlighting.enabled": true,
  "editor.linkedEditing": true,
  "editor.bracketPairColorization.enabled": true,

  // Suggestions
  "editor.inlineSuggest.enabled": true,
  "editor.acceptSuggestionOnEnter": "smart",
  "editor.quickSuggestions": {
    "strings": true
  },
  "editor.stickyScroll.enabled": false,
  "git.confirmSync": false,
  "window.commandCenter": false,
  "githubPullRequests.createOnPublishBranch": "never",
  "githubPullRequests.pullBranch": "never",
  "material-icon-theme.hidesExplorerArrows": true,
  "editor.suggestFontSize": 14,
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "typescript.updateImportsOnFileMove.enabled": "always",
  "totalTypeScript.hideAllTips": false,
  "totalTypeScript.hideBasicTips": true,
  "diffEditor.ignoreTrimWhitespace": false,
  "evenBetterToml.formatter.alignComments": true,
  "workbench.sideBar.location": "right",
  "githubPullRequests.pushBranch": "always",
  "git.enableSmartCommit": true,
  "editor.accessibilitySupport": "off",
  "workbench.colorTheme": "Monokai Pro (Filter Ristretto)",
  "workbench.productIconTheme": "icons-carbon-tweaked",
  "terminal.integrated.cursorStyle": "line",
  "terminal.integrated.cursorStyleInactive": "block",
  "editor.lineNumbers": "off",
  "explorer.confirmPasteNative": false,
  "editor.formatOnPaste": true
}
